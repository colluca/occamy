[
    // Cluster 0 DMA engine
    {
        "thread": "dma_9",
        "roi": [
% if multicast == "true":
    % for i in range(0, n_clusters_to_use):
            {"idx": ${i - n_clusters_to_use}, "label": "${f'{i}'}"},
    % endfor
% elif multicast == "hybrid":
    % for i in range(1, n_clusters_to_use//4):
            {"idx": ${i - n_clusters_to_use//4 - 3}, "label": "${f'{i*4}'}"},
    % endfor
            {"idx": ${-3}, "label": "${f'{1}'}"},
            {"idx": ${-2}, "label": "${f'{2}'}"},
            {"idx": ${-1}, "label": "${f'{3}'}"},
% else:
            {"idx": -1, "label": "transfer"},
% endif
        ]
    },

% if multicast == "hybrid":
    % for i in range(1, n_clusters_to_use//4):
    {
        "thread": "${f'dma_{(i*4 + 1)*9}'}",
        "roi": [
            {"idx": ${-3}, "label": "${f'{i*4+1}'}"},
            {"idx": ${-2}, "label": "${f'{i*4+2}'}"},
            {"idx": ${-1}, "label": "${f'{i*4+3}'}"},
        ]
    },
    % endfor
% endif
]